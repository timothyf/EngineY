                        <li>
                            <a href="http://add.my.yahoo.com/rss?url=http://blog.timothyfisher.com/?feed=rss2" title="Add to My Yahoo!" target="subscriptions"><img src="http://us.i1.yimg.com/us.yimg.com/i/us/my/addtomyyahoo4.gif" alt="Add to My Yahoo!" /></a>
                        </li>
                        <li>
                            <a href="http://www.newsgator.com/ngs/subscriber/subext.aspx?url=http://blog.timothyfisher.com/?feed=rss2" title="Subscribe in NewsGator Online" target="subscriptions"><img src="http://www.newsgator.com/images/ngsub1.gif" alt="Subscribe in NewsGator Online" width="91" /></a>
                        </li>
                        <li>
                            <a href="http://feeds.my.aol.com/add.jsp?url=http://blog.timothyfisher.com/?feed=rss2" title="Subscribe in your AOL" target="subscriptions"><img src="http://blog.timothyfisher.com/wp-content/themes/fadtastic_theme/images/subscribe/addtomyaol.gif" alt="The latest comments to all posts in RSS" /></a>
                        </li>
                    </ul>
                    <h3>Meta</h3>
                    <ul>
                        <li><small>Powered by <a href="http://www.enginey.com">EngineY</a></small></li>
						<% if logged_in? %>
							<li><%= link_to 'Admin', '/admin' %></li>
						<% end %>
                    </ul>
                </div>
                <div id="side_two" class="side">
                    <h3>Topics</h3>
                    <ul>
                    	<% topics.each do |topic| %>
	                        <li class="cat-item cat-item-8">
	                            <a href="http://blog.timothyfisher.com/?cat=8" title="View all posts filed under <%= topic.name %>">
	                            	<%= topic.name %>
								</a>
	                        </li>
						<% end %>
                    </ul>
