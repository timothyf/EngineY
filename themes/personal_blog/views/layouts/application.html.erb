		<% topics = current_user.blog_post_topics %>
	</head>
    <body>
        <div id="wrapper">
            <div class="content_padding">
                <div id="header_effect">
                    <div id="header">
                        <p><a href="http://blog.timothyfisher.com"><%= Network.find(:first).name %></a></p>
                    </div>
                </div>
				<%= yield %>
                <div id="side_one" class="side">
                    <h3>Find Me</h3>
