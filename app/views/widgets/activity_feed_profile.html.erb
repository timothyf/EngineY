<% widget_title = "Latest Activity" %>

<% @user = User.find(user_id) %>
<% if only_statuses && include_friends  %>
	<% activities = @user.friends_status_activity_stream %>
<% elsif include_friends %>
	<% activities = @user.friends_activity_stream %>
<% elsif only_statuses %>
	<% activities = @user.status_activity_stream %>
<% else %>
	<% activities = @user.activities %>
<% end %>
<% @activities = activities[0...8] %>

<% content_for :module_header do %>
	<div class="head_left">
		<%= image_tag('newspaper.png', :alt=>'events', :align=>'absmiddle')%>&nbsp;&nbsp;<%= widget_title %>
	</div>
	<div class="head_right">
		<div id="expand_collapse_btn" style="float:right;">
			<a href="javascript:widget_change_display('<%= @layout.id %>')">
				<img id="<%= @widget_name %>_collapse_img" src="/images/collapse.png"/>
			</a>
		</div>	
		<span style="float:right;margin-right:10px;">
			<% if only_statuses %>
				<input onclick="filter_activities(<%= @layout.id %>)" type="checkbox" id="status_checkbox" name="status_checkbox" checked="checked" />
			<% else %>
				<input onclick="filter_activities(<%= @layout.id %>)" type="checkbox" id="status_checkbox" name="status_checkbox" />
			<% end %>
			<label>Show only statuses</label>
			<% if include_friends %>
				<input onclick="filter_activities(<%= @layout.id %>)" type="checkbox" id="friends_checkbox" name="friends_checkbox" checked="checked"/>
			<% else %>
				<input onclick="filter_activities(<%= @layout.id %>)" type="checkbox" id="friends_checkbox" name="friends_checkbox" />
			<% end %>
			<label>Include Friends</label>
		</span>
	</div>
	<div style="clear:both;"></div>
<% end %>

<% content_for :module_body do %>
	<% @activities.each do |activity| %>
		<div class="activity_feed_item"><%= activity_feed_message(activity) %></div>
	<% end %>		
<% end %>

<% content_for :module_footer do %>
	<%= link_to 'View All', user_activities_path(@user) %>&nbsp;|&nbsp;	
	<%= link_to 'RSS', formatted_activities_url(:rss) %>
	<%= link_to image_tag('feed.png', :alt=>'rss', :align=>'absmiddle'), formatted_activities_url(:rss) %>
<% end %>
